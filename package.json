{
	"name": "@barinbritva/event-link-generator",
	"version": "0.1.1",
	"main": "./dist/index.js",
	"files": [
		"/dist"
	],
	"types": "./dist/__types__",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"engineStrict": true,
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"build": "ts-node ./tasks/run-build.ts",
		"build:dev": "ts-node --project ./tsconfig-dev.json ./tasks/run-build.ts -d",
		"test": "vitest run",
		"test:dev": "vitest watch",
		"release": "ts-node ./tasks/run-release.ts",
		"typedoc": "typedoc --out docs src/index.ts",
		"prettier:lint": "prettier --check \"./src/**/*.{ts,tsx,json}\"",
		"prettier:fix": "prettier --write \"./src/**/*.{ts,tsx,json}\""
	},
	"author": {
		"name": "Barin Britva",
		"email": "barinbritva@outlook.com",
		"url": "https://barinbritva.ru"
	},
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^14.14.31",
		"lefthook": "^1.3.8",
		"prettier": "^2.8.7",
		"ts-node": "^9.1.1",
		"typedoc": "^0.23.28",
		"typescript": "^5.0.2",
		"vite": "^4.2.1",
		"vitest": "^0.29.8"
	}
}
